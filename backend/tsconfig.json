{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"Utils/*": ["utils/*"],
			"Controllers/*": ["controllers/*"],
			"Models/*": ["models/*"],
			"Gateways/*": ["gateways/*"],
			"Routes/*": ["routes/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	}
}
